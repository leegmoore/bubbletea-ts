{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@bubbletea/tea": [
        "packages/tea/src/index.ts"
      ],
      "@bubbletea/tea/internal": [
        "packages/tea/src/internal/index.ts"
      ],
      "@bubbletea/tea/internal/*": [
        "packages/tea/src/internal/*"
      ],
      "@bubbletea/windows-binding": [
        "packages/windows-binding/src/index.ts"
      ],
      "@bubbletea/windows-binding/*": [
        "packages/windows-binding/src/*"
      ],
      "@bubbletea/windows-binding-ffi": [
        "packages/windows-binding-ffi/src/index.ts"
      ],
      "@bubbletea/windows-binding-ffi/*": [
        "packages/windows-binding-ffi/src/*"
      ]
    },
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true
  }
}
