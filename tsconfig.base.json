{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@bubbletea/tea": [
        "packages/tea/src/index.ts"
      ],
      "@bubbletea/tea/internal": [
        "packages/tea/src/internal/index.ts"
      ],
      "@bubbletea/tea/internal/*": [
        "packages/tea/src/internal/*"
      ],
      "@bubbletea/tests": [
        "packages/tests/src/index.ts"
      ],
      "@bubbletea/tests/*": [
        "packages/tests/src/*"
      ]
    },
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "verbatimModuleSyntax": true
  }
}
